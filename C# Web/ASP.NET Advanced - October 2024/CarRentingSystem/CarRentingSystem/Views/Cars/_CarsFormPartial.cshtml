@model CarFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="header-margin text-center">@ViewData["Title"]</h2>
        <form method="post">
            <div class="form-group div-margin">
                <label asp-for="Make">Make</label>
                <input asp-for="Make" class="form-control" placeholder="Mercedes, BMW, etc...">
                <span asp-validation-for="Make" class="small text-danger"></span>
            </div>
            <div class="form-group div-margin">
                <label asp-for="Model">Model</label>
                <input asp-for="Model" class="form-control" placeholder="M5, Q7, etc...">
                <span asp-validation-for="Model" class="small text-danger"></span>
            </div>
            <div class="form-group div-margin">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Write a brief description here..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group div-margin">
                <label asp-for="ImageUrl">Image Url</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Image Url of your car...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group div-margin">
                <label asp-for="Year">Year</label>
                <input asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year">
                <span asp-validation-for="Year" class="small text-danger"></span>
            </div>
            <div class="form-group div-margin">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        if (category.Id == Model.CategoryId)
                        {
                            <option value="@category.Id" selected>@category.Name</option>
                        }
                        else
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    }
                </select>
            </div>

            <div class="text-center div-margin">
                <button type="submit" class="btn btn-block btn-primary mt-3">@ViewData["Title"]</button>
            </div>
        </form>
    </div>
</div>